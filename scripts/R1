#!/bin/bash
ip link set dev eth0 up
ip a a 170.6.253.2/29 dev eth0
ip link set dev eth1 up
ip a a 170.6.253.9/30 dev eth1

echo 1 > /proc/sys/net/ipv4/ip_forward
ip route add 170.6.253.128/25 via 170.6.253.1
ip route add 170.6.253.8/29 via 170.6.253.10
ip route add 170.6.253.16/29 via 170.6.253.3
ip route add 170.6.253.24/30 via 170.6.253.10

